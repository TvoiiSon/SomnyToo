# Основные настройки сервера
DATABASE_URL=postgres://user:password@localhost:5432/somnytoo
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Секретные ключи
HMAC_SECRET_KEY=abc123def456...64_hex_chars
AES_SECRET_KEY=def456abc123...64_hex_chars
PSK_SECRET=123abc456def...64_hex_chars

# Настройки базы данных
DB_MAX_CONNECTIONS=50
DB_MIN_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=30
DB_ACQUIRE_TIMEOUT=5
DB_IDLE_TIMEOUT=300
DB_MAX_LIFETIME=1800
DB_STATEMENT_CACHE_SIZE=1000
DB_CONNECT_RETRIES=3

# Настройки безопасности
MAX_REQUESTS_PER_MINUTE=1000
QUERY_TIMEOUT_MS=5000
MAX_QUERY_LENGTH=1048576
ENABLE_SQL_INJECTION_PROTECTION=true
ENABLE_RATE_LIMITING=true

# Настройки скейлинга
ENABLE_AUTO_SCALING=true
MAX_REPLICAS=10
MIN_REPLICAS=1
SCALE_UP_CPU_THRESHOLD=80.0
SCALE_DOWN_CPU_THRESHOLD=30.0
SCALE_UP_CONNECTIONS_THRESHOLD=1000
SCALE_CHECK_INTERVAL_SECONDS=60

# Настройки кэширования
ENABLE_QUERY_CACHE=true
QUERY_CACHE_SIZE=10000
QUERY_CACHE_TTL_SECONDS=300
ENABLE_PREPARED_STATEMENTS=true
PREPARED_STATEMENTS_CACHE_SIZE=1000

# Настройки логирования
LOG_LEVEL=debug